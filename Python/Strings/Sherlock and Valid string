def isValid(s):
    counts = [0]*(26)
    n = len(s)
    for i in range(n):
        counts[ord(s[i])-97]+=1
    i = 0
    b = 26
    while(i<b):
        if (counts[i]==0):
            counts.remove(0)
            b-=1
        else:
            i+=1
    a = len(counts)
    if (a==1):
        return("YES")
    counts.sort()
    if (counts[0]!=1):
        for i in range(a-1):
            if (counts[i]!=counts[i+1] and i!=a-2):
                return("NO")
        if (counts[a-2]+1==counts[a-1] or counts[a-2]==counts[a-1]):
            return("YES")
        else:
            return("NO")
    else:
        for i in range(1,a-2):
            if (counts[i] !=counts[i+1]):
                return("NO")
        if (counts[1]==1 and counts[a-1]-counts[a-2]<=1):
            return("YES")
        elif (counts[1]!=1 and counts[a-2]==counts[a-1]):
            return("YES")
        else:
            return("NO")
            

s = input()
print(isValid(s))
